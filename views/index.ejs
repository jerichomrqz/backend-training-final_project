<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TOY INVENTORY MANAGEMENT SYSTEM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            text-align: center;
            background-color: #1d8eff;
            color: white;
            margin: 0;
            padding: 20px 0;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        td, th {
            text-align: left;
            padding: 15px;
            border-bottom: 1px solid #ddd;
            word-wrap: break-word; 
        }

        td {
            max-width: 150px; 
            overflow-wrap: break-word; 
        }

        th {
            background-color: #1d8eff;
            color: white;
        }


        a {
            text-decoration: none;
            font-weight: bold;
        }

        a.info {
            color: white;
            background-color: #f9b71f;
            padding: 5px 10px;
            border-radius: 4px;
        }

        a.info:hover {
            background-color: #d59f17;
        }

        a.edit {
            color: white;
            background-color: #4CAF50;
            padding: 5px 10px;
            border-radius: 4px;
        }

        a.edit:hover {
            background-color: #45a049;
        }

        a.delete {
            color: white;
            background-color: #e74c3c;
            padding: 5px 10px;
            border-radius: 4px;
        }

        a.delete:hover {
            background-color: #c0392b;
        }

        .add-toy {
            display: block;
            text-align: center;
            background-color: #1d8eff;
            color: white;
            padding: 10px 20px;
            margin: 20px auto;
            text-decoration: none;
            font-weight: bold;
            max-width: 200px;
            border-radius: 4px;
        }

        .add-toy:hover {
            background-color: #0062e1;
        }
    </style>
</head>
<body>
    <h1>Toy Inventory Management System</h1>

    <a href="/toys/new" class="add-toy">Add New Toy</a>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% toys.forEach((toy, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= toy.name %></td>
                    <td><%= toy.category %></td>
                    <td><%= toy.quantity %></td>
                    <td>â‚±<%= toy.price %></td>
                    <td><%= toy.description %> </td>
                    <td><%= new Date(toy.createdAt).toLocaleDateString() %></td>
                    <td>
                        <a href="/toys/<%= toy.id %>" class="info">View</a>
                        <a href="/toys/<%= toy.id %>/edit" class="edit">Edit</a>
                        <a href="/toys/<%= toy.id %>/delete" class="delete">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              <span id="toastMessage">Action completed successfully!</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>
      </div>
      
      <script>
        function showToast(message) {
          const toastElement = document.getElementById('successToast');
          const toastMessage = document.getElementById('toastMessage');
          toastMessage.textContent = message;
          const toast = new bootstrap.Toast(toastElement);
          toast.show();
        }
      
        // Display Toast Bootstrap
        const urlParams = new URLSearchParams(window.location.search);
        const successMessage = urlParams.get('success');
        if (successMessage) {
          showToast(successMessage);
        }
      </script>
</body>

</html>
